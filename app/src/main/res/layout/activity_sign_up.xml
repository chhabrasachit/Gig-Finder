<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDarker"
        tools:context=".MainActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/logo2"
            android:background="@color/colorPrimaryDarker"
            android:padding="40dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/logo" />

        <EditText
            android:id="@+id/Name"
            android:theme="@style/EditTextTheme"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_below="@+id/password"
            android:layout_alignStart="@+id/password"
            android:layout_alignLeft="@+id/password"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/user"
            android:ems="10"
            android:textColor="@color/yellow"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textColorHint="@color/yellow"
            android:drawableTint="@color/yellow"
            android:backgroundTint="@color/yellow"
            android:hint="@string/enter_your_full_name"
            android:inputType="textEmailAddress"
            android:autofillHints=""
            tools:ignore="RtlHardcoded" />

        <EditText
            android:id="@+id/password"
            android:textCursorDrawable="@drawable/cursor_color"
            android:theme="@style/EditTextTheme"
            android:textColorHint="@color/yellow"
            android:drawableTint="@color/yellow"
            android:textColor="@color/yellow"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_below="@+id/email"
            android:layout_alignStart="@+id/email"
            android:layout_alignLeft="@+id/email"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="11dp"
            android:drawableLeft="@drawable/pass"
            android:ems="10"
            android:backgroundTint="@color/yellow"
            android:hint="@string/enter_your_password"
            android:inputType="textPassword"
            android:autofillHints=""
            tools:ignore="RtlHardcoded" />

        <EditText
            android:id="@+id/email"
            android:textColor="@color/yellow"
            android:textCursorDrawable="@drawable/cursor_color"
            android:theme="@style/EditTextTheme"
            android:textColorHint="@color/yellow"
            android:drawableTint="@color/yellow"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:backgroundTint="@color/yellow"
            android:drawableStart="@drawable/email"
            android:ems="10"
            android:hint="@string/enter_your_email"
            android:inputType="textEmailAddress"
            android:textSize="16sp"
            android:autofillHints="" />
        <EditText
            android:id="@+id/Number"
            android:layout_width="300dp"
            android:textColor="@color/yellow"
            android:textCursorDrawable="@drawable/cursor_color"
            android:theme="@style/EditTextTheme"
            android:textColorHint="@color/yellow"
            android:drawableTint="@color/yellow"
            android:layout_height="53dp"
            android:layout_below="@+id/Name"
            android:layout_alignStart="@+id/Name"
            android:layout_alignLeft="@+id/Name"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="11dp"
            android:backgroundTint="@color/yellow"
            android:drawableLeft="@drawable/phone2"
            android:ems="10"
            android:inputType="phone"
            android:hint="@string/enter_your_phone_number"
            android:autofillHints=""
            tools:ignore="RtlHardcoded" />

        <EditText
            android:id="@+id/pref"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:textColor="@color/yellow"
            android:ems="10"
            android:textCursorDrawable="@drawable/cursor_color"
            android:theme="@style/EditTextTheme"
            android:textColorHint="@color/yellow"
            android:drawableTint="@color/yellow"
            android:layout_alignLeft="@+id/Number"
            android:layout_alignStart="@+id/Number"
            android:layout_below="@+id/Number"
            android:hint="@string/enter_your_job_preference"
            android:drawableLeft="@drawable/work"
            android:layout_marginTop="11dp"
            android:backgroundTint="@color/yellow"
            android:inputType="textPersonName"
            android:autofillHints=""
            tools:ignore="RtlHardcoded" />
        <EditText
            android:id="@+id/exp"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:ems="10"
            android:textColor="@color/yellow"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textColorHint="@color/yellow"
            android:drawableTint="@color/yellow"
            android:layout_alignLeft="@+id/pref"
            android:layout_alignStart="@+id/pref"
            android:layout_below="@+id/pref"
            android:hint="@string/enter_your_experience"
            android:drawableStart="@drawable/job"
            android:layout_marginTop="11dp"
            android:backgroundTint="@color/yellow"
            android:inputType="textPersonName"
            android:autofillHints=""
            tools:ignore="RtlHardcoded" />
        <EditText
            android:id="@+id/bio"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:ems="10"
            android:layout_alignLeft="@+id/exp"
            android:layout_alignStart="@+id/exp"
            android:layout_below="@+id/exp"
            android:theme="@style/EditTextTheme"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textColorHint="@color/yellow"
            android:drawableTint="@color/yellow"
            android:hint="@string/enter_one_line_bio"
            android:textColor="@color/yellow"
            android:drawableLeft="@drawable/bio"
            android:layout_marginTop="11dp"
            android:backgroundTint="@color/yellow"
            android:inputType="textPersonName"
            android:autofillHints=""
            tools:ignore="RtlHardcoded" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_below="@+id/bio"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/yellow"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="18sp"
                    android:text="@string/register"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto"/>
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/login"
                android:background="#0000"/>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

</ScrollView>